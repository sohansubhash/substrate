---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="gl">
            <slot />
        </div>
    </body>
</html>

<style is:global>
    /* CSS Variables */
    :root {
        --color-text: #242424;
        --color-border: #e0e0e0;
        --font-heading: "Redaction35", serif;
        --font-body: "DepartureMono", monospace;
    }

    /* Font Faces */
    @font-face {
        font-family: "Redaction35";
        src: url("/fonts/Redaction_35-Regular.woff2") format("woff");
        font-weight: normal;
        font-style: normal;
    }
    @font-face {
        font-family: "DepartureMono";
        src: url("/fonts/DepartureMono-Regular.woff2") format("woff");
        font-weight: normal;
        font-style: normal;
    }

    /* Reset */
    html,
    body {
        margin: 0;
        padding: 0;
    }

    /* Typography - using em units */
    h1 {
        font-family: var(--font-heading);
        font-size: 5rem;
        color: var(--color-text);
    }
    p {
        font-family: var(--font-body);
        font-size: 1.25rem;
        color: var(--color-text);
    }

    /* Layout Components */
    .ht {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .gl {
        display: grid;
        grid-template-columns: 1fr min(780px, calc(100vw - 32px)) 1fr;
        height: 100vh;
    }

    .grid-item {
        border-right: 1px solid var(--color-border);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .grid-item:nth-child(3n) {
        border-right: none;
    }

    .content-wrapper {
        text-align: left;
        max-width: 100%;
    }

    /* Only scale screenshot images */
    .content-wrapper img[alt="firefox"] {
        max-width: 100%;
        height: auto;
    }

    /* Mobile - keep 3 columns but make sides visible */
    @media (max-width: 900px) {
        .gl {
            grid-template-columns: 8px 1fr 8px;
        }
    }
</style>
